{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "description": {
      "type": "text",
      "default": "預設課程介紹",
      "required": true
    },
    "goal": {
      "type": "text",
      "default": "預設課程目標",
      "required": true
    },
    "price": {
      "default": 100,
      "required": true,
      "type": "integer"
    },
    "durationDay": {
      "type": "integer",
      "required": true,
      "default": 30
    },
    "chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chapter.chapter",
      "mappedBy": "course"
    }
  }
}
