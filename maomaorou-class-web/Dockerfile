FROM node:18.19.0 as base
WORKDIR /app
COPY package*.json ./
EXPOSE 3100

FROM base as production
COPY . .
RUN npm install
RUN npm run build

ARG PORT
ARG BACKEND_URL
ARG NEXT_PUBLIC_BACKEND_URL

ENV PORT=${PORT}
ENV BACKEND_URL=${BACKEND_URL}
ENV NEXT_PUBLIC_BACKEND_URL=${NEXT_PUBLIC_BACKEND_URL}

CMD ["npm", "run", "start"]
